[Unit]
Description=Word of Guidance Email Service
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/email-service
ExecStart=/usr/bin/node /var/www/email-service/server.js
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=word-of-guidance-email

[Install]
WantedBy=multi-user.target
